@model ContosoUniverstity.Models.InstructorExists

@{
    ViewData["Title"] = "Delete Instructor";
}

<h1>Delete Instructor</h1>

<h3>Are you sure you want to delete this instructor?</h3>
<div>
    <h4>@Model.FullName</h4>
    <p>
        <strong>Hire Date:</strong> @Model.HireDate.ToShortDateString()<br />
        <strong>Office Location:</strong> @Model.OfficeAssignment?.Location
    </p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-outline-primary">Cancel</a>
</form>
