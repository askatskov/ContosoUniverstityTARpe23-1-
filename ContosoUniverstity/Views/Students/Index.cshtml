
@model IEnumerable<ContosoUniverstity.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Õpilaste Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modeItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modeItem => item.FirstMidName)
                </td>
                <td>
                    @Html.DisplayFor(modeItem => item.EnrollmentDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <form asp-action="Clone" asp-route-id="@item.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-link">clone</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>