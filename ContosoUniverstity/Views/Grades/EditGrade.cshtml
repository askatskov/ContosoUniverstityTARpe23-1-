@model ContosoUniverstity.Models.Enrollment

@{
    ViewData["Title"] = "Edit Grade";
}

<h2>Edit Grade for @Model.Course.Title</h2>

<form asp-action="EditGrade" method="post">
    <input type="hidden" asp-for="EnrollmentID" />

    <div class="form-group">
        <label asp-for="Grade" class="control-label"></label>
        <select asp-for="Grade" class="form-control">
            <option value="">-- Select Grade --</option>
            @foreach (var grade in Enum.GetValues(typeof(ContosoUniverstity.Models.Grade)))
            {
                <option value="@grade">@grade</option>
            }
        </select>
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
